# WhatsBotX - Personal Assistant Bot Configuration
# Copy this file to .env and update with your actual values

# OpenAI API Configuration (for AI features)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Weather API (OpenWeatherMap - free tier available)
WEATHER_API_KEY=your_weather_api_key_here
WEATHER_UNITS=metric

# Bot Configuration
BOT_NAME=WhatsBotX Assistant
BOT_PREFIX=/
ADMIN_PHONE_NUMBER=+919876543210
BOT_DESCRIPTION=Your Personal AI Assistant on WhatsApp

# Server Configuration
PORT=3001
NODE_ENV=development
API_ENABLED=true

# Database Configuration
DATABASE_PATH=./data/whatsbotx.db

# Features Toggle
ENABLE_AI_CHAT=true
ENABLE_REMINDERS=true
ENABLE_TODO_LIST=true
ENABLE_WEATHER=true
ENABLE_TRANSLATION=true
ENABLE_NEWS=true
ENABLE_JOKES=true

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/whatsbotx.log

# Session Management
SESSION_FOLDER=./data/sessions
